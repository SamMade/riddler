{
    "env": {
        "browser": true
    },
    "extends": "eslint:recommended",
	"parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module"
    },
    "plugins": [ "html" ],
    "settings": {
        "html/html-extensions": [".html", ".vue"]
    },
    "rules": {
        "quotes": ["error", "single"],
        "indent": ["error", "tab"],
        "linebreak-style": ["error", "unix"],
        "semi": ["error", "always"],
        "no-unused-vars": ["warn"]
    }
}